
<div class="container py-5">
    
    <h2>商品一覧</h2>
    
    <div class = "row justify-content-end mb-3">
        <div class = "col-2">
            <%= link_to new_admin_item_path do %>
                <i class="fa-regular fa-square-plus h3"></i>
            <% end %>
        </div>
        
        
        
        
    </div>
    <div class="row mx-auto 0">
        <table class="table table-hover table-inverse">
            <thead class ="table-head" style="background-color:#eebbcd;">
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
           
            <% @items.each do |item| %>
            <tbody>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to admin_item_path(item.id) do %>
                            <%= item.name %>
                        <% end %>
                    </td>
                    <td><%= item.non_taxed_price.to_s(:delimited) %></td>
                    <td><%= item.genre.name %></td>
                    <td>
                        <% if item.is_active %>
                            <strong class ="text-success"> 販売中</strong> 
                        <% else %>
                            <strong class ="text-muted"> 販売停止中</strong> 
                        <% end %>
                    </td>
                </tr>
            </tbody>
            <% end %>
        </table>
        <%= paginate @items %>
    </div>
    
</div>