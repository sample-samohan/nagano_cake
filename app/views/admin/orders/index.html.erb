<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-10 col-offset-1">
      <table class="table table-bordered">
        <thead>
          <tr class="table-head" style="background-color:#a7b19b;">
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
            <th scope="col">注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %>
                  <%= l order.created_at, format: :short %></td>
              <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
              <td>
                <% @sum = 0 %>
                <% order.order_details.all.each do |order_detail| %>
                  <% @amount = order_detail.amount %>
                  <% @sum += @amount %>
                <% end %>
                <%= @sum %>
              </td>
              <td><%= Order.statuses_i18n[order.status] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p class="col-3 col-offset-5"><%= paginate @orders %></p>
    </div>
  </div>
</div>
