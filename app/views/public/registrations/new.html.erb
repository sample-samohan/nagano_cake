<div class="container">
  <div class="row no-gutters">
    <div class="col-md-12 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規会員登録</h5>
      <div class="form-body p-4">
        <table class = "table table-hober table-inverse">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <tr>
              <th>名前</th>
              <th class="field">
               <%= f.label :（姓）%>
               <%= f.text_field :family_name %>
              </th>
              <th class="field">
               <%= f.label :（名）%>
               <%= f.text_field :first_name %>
              </th>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th class="field">
               <%= f.label :（セイ）%>
               <%= f.text_field :family_name_kana %>
              </th>
              <th class="field">
               <%= f.label :（メイ）%>
               <%= f.text_field :first_name_kana %>
              </th>
             </tr>
             <tr>
              <th class="field">メールアドレス</th>
              <th class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </th>
             </tr>
             <tr>
               <th>郵便番号（ハイフンなし）</th>
               <th class="field">
                 <%= f.text_field :post_code %>
               </th>
             </tr>
             <tr>
               <th>住所</th>
               <th class="field">
                 <%= f.text_field :address %>
               </th>
             </tr>
             <tr>
               <th class="field">電話番号（ハイフンなし）</th>
               <th class="field">
                 <%= f.text_field :telephone_number %>
               </th>
             </tr>
             <tr>
              <th>パスワード（6文字以上）</th>
              <th class="field">
                <% if @minimum_password_length %>
                  <!--em>(<!%= @minimum_password_length %> characters minimum)</em-->
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </th>  
            </tr>
            <tr>
              <th class="field">パスワード（確認用）</th>
              <th>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
               </th>
            </tr>
            <tr>
               <div class="actions">
               <%= f.submit "新規登録" %>
            </tr>
         <% end %>

         <%= render "public/shared/links" %>

      </table>
     </div>
    </div>
  </div>
</div>