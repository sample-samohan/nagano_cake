<div class="container">

    <div class="row login-row mt-5">
      <h3>配送先登録/一覧</h3>
    </div>

    <div class="row">
      <%= form_with model: @address, local: true do |f| %>
        <div class="field">
          <label class="postal-code-label">郵便番号（ハイフンなし）</label>
          <%= f.text_field :post_code, autofocus: true, class:"", size:"" %>
        </div>

        <div class="field">
          <label class="address-label">住所</label>
          <%= f.text_field :address, autofocus: true, class:"", size:"60*60" %>
        </div>

        <div class="field">
          <label class="address-label">宛名</label>
          <%= f.text_field :name, autofocus: true, class:"", size:"30*30" %>
        </div>

        <%= f.submit "登録する", class: "btn btn-success submit" %>
      <% end %>

    </div>

    <div class="row">

      <table class="table table-bordered address-table">
        <thead>
          <tr class="table-head" style="background-color:#bad4d1;">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>

            <tr>
              <td><%= address.post_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary"  %></td>
              <td><%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

</div>