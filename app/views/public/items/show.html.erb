<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!--%= render 'ジャンル検索', genres: @genres %-->
    </div>
    <div class="col-xs-3">
      <!--%= attachment_image_tag(@item, :image) %-->
    </div>
    <div class="col-xs-6">
      <h3><%= @item.name %></h3><br>
      <p><%= @item.explanation %></p><br>
      <h5>¥<%= (@item.non_taxed_price * 1.1).to_i %>（税込）</h5>
      
      <%= form_with(model: item, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :amount, '個数' %>
          <%= f.select :amount, {"1".."100"}, { include_blank: '選択してください'}, { class: 'form-control', required: true } %>
        </div>
        <div class="form-group">
          <%= f.submit 'カートに入れる', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>  
      
    </div>
  </div>
</div>
