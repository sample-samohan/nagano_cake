<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th><h2>商品一覧</h2>
            <h5>（全<%= @items.count %>件）</h5>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= link_to item_path(item.id) do %> 
            <%= image_tag item.image,size: "200x200" %>
          <% end %></td>
        <tr>
          <td><%= link_to item_path(item.id) do %> 
             <%= item.name %>
          <% end %></td>  
        </tr>
        <tr>
          <td>¥<%= (item.non_taxed_price*1.1).to_i %></td>
        </tr>  
        <% end %>
      </tbody>

    </table>
   <%= paginate @items %>
  </div>
</div>
