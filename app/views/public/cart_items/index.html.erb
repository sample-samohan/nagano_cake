<div class="container">
    <div class="row">
        <h2>ショッピングカート</h2>
        <!--カートを空にする-->
        <div>
            <%= link_to 'カートを空にする', cart_items_destroy_all_path, method: :delete, class: "btn btn-danger ms-3", data: { confirm: "本当に空にしていいですか？" } %>
        </div>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        
        
        <tr>
            <td><%= image_tag, cart_item.</td>
        </tr>
    </table>
</div>